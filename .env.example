# ======================
# PostgreSQL Configuration
# ======================
POSTGRES_HOST=postgres
POSTGRES_HOST_PORT=5433
POSTGRES_CONTAINER_PORT=5432

POSTGRES_DB=hackathon

POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin

# Worker user (ingestion, writes)
POSTGRES_WORKER_USER=worker_user
POSTGRES_WORKER_PASSWORD=worker_password

# Backend API user (standard CRUD)
POSTGRES_APP_USER=app_user
POSTGRES_APP_PASSWORD=app_password

# Frontend user (read-only)
POSTGRES_FRONTEND_USER=frontend_user
POSTGRES_FRONTEND_PASSWORD=frontend_password

# Postgres connection settings
PG_MIN_POOL=5
PG_MAX_POOL=20
PG_STMT_TIMEOUT=10000
PG_TZ=UTC

# ======================
# Redis Configuration
# ======================
REDIS_HOST=redis
REDIS_HOST_PORT=6380
REDIS_CONTAINER_PORT=6379

REDIS_APP_USER=app
REDIS_APP_PASSWORD=app_redis_password

REDIS_WORKER_USER=worker
REDIS_WORKER_PASSWORD=worker_redis_password

REDIS_FRONTEND_USER=frontend
REDIS_FRONTEND_PASSWORD=frontend_redis_password